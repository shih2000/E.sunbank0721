@page
@model E.sunbank0721.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1 class="display-4">歡迎下訂</h1>
    <div>
        <table style="border:2px #cccccc solid;" cellpadding="10" border="1">
            <tr>
                <td>選擇</td>
                <td>數量</td>
                <td>商品名稱</td>
                <td>價格</td>
            </tr>
            
            <tr>
                <td><input type="checkbox" name="checkbox" value="1" /><br /></td>
                <td><input type="text" name="numberbox" placeholder="請輸入需要的數量" /><br /></td>
                <td></td>
                <td></td>
            </tr>         
        </table>
        <input type="button" value="前往付款網站" onclick=<a asp-page="PayPage" />
        <input type="submit" value="送出" />
    </div>

</div>
<hr/>
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].StandPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ItemPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].MemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].PayStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayStatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
