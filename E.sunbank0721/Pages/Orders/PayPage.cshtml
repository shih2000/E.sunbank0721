@page
@model E.sunbank0721.Pages.Orders.PayPageModel
@{
    ViewData["Title"] = "PayPage";
}
<h2>付款資訊</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>會員編號</label>
                <input type="number" data-val="true"
                       data-val-length="會員編號為數字."
                       data-val-length-max="5" data-val-required="此欄為必填."
                       id="MemberID" maxlength="5" name="Order.MemberID" value="" />
                <input type="submit" value="確認付款" onclick=PayStatusFunction() />
                <input name="__RequestVerificationToken" type="hidden"
                       value="<Antiforgery token here>" />
                <span asp-validation-for="Order.MemberID" class="text-danger"></span>
            </div>
           
        </form>
    </div>
</div>